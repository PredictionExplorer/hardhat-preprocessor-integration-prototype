	"compilerOptions":
	{
		// "composite": true,
		"target": /* "ES2023" */ "ES2022",
		"module": /* "CommonJS" */ "ES2022" /* "NodeNext" */,
		"moduleResolution": /* "Node16" */ "Bundler" /* "NodeNext" */,

		// "allowJs": true,
		"checkJs": true,

		// "declarationMap": true,
		// "sourceMap": true,
		// "outDir": "out",
		// "removeComments": true,
		// "importHelpers": true,

		"strict": true,

		// [Comment-202409224]
		// These lints would be difficult to fix, so disabling them.
		// [/Comment-202409224]
		"noImplicitAny": false,

		// Comment-202409224 applies.
		// [Comment-202409225]
		// This conflicts with `exactOptionalPropertyTypes`, so I have commented it out.
		// [/Comment-202409225]
		"strictNullChecks": false,

		"noUnusedLocals": true,
		"noUnusedParameters": true,

		// // Comment-202409225 relates and/or applies.
		// "exactOptionalPropertyTypes": true,

		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		// "noPropertyAccessFromIndexSignature": true,
		"noErrorTruncation": true,
	},
}
